class calculator:
    def cal(self, a, b, c):
        if b == "+":
            print(a+c)
        elif b == "-":
            print(a-c)
        elif b == "*":
            print(a*c)
        elif b == "/":
            print(a/c)
        else:
            print("Error!")
a = int(input("Enter 1st num.: "))
b = (input("Enter symbol: "))
c = int(input("Enter 2st num.: "))
p = calculator()
p.cal(a,b,c)
